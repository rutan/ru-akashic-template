{
  "name": "@rutan/akashic-template",
  "version": "1.0.0",
  "author": "ru_shalm <ru_shalm@hazimu.com>",
  "license": "Unlicense",
  "private": true,
  "scripts": {
    "start": "akashic-sandbox ./game",
    "serve": "akashic serve --target-service nicolive ./game",
    "build": "run-s lint clean build:*",
    "build:vite": "cross-env NODE_ENV=production vite build",
    "build:scan": "pnpm run scan",
    "watch": "vite build -w",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "assets": "run-s assets:* scan",
    "assets:mkdir": "mkdirp ./tmp && mkdirp src/assets && mkdirp game/assets/textures",
    "assets:updateAssets": "node ./scripts/convertAssets.cjs",
    "scan": "cd game && akashic scan asset",
    "clean": "run-p clean:*",
    "clean:script": "rimraf ./game/script/bundle.js",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier -c .",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "eslint --fix src",
    "deploy:web": "cross-env JITI_ESM_RESOLVE=1 jiti ./scripts/buildForWeb.ts && deployment-zip -c .deployment-zip.ts -m zip ./tmp/_build",
    "deploy:nicolive": "cross-env JITI_ESM_RESOLVE=1 jiti ./scripts/archiveForNicoLive.ts",
    "prepare": "husky install",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@akashic-extension/akashic-hover-plugin": "^3.2.2",
    "@akashic-extension/resolve-player-info": "^1.3.0",
    "@akashic/akashic-engine": "^3.17.1",
    "eventmit": "^2.0.4"
  },
  "devDependencies": {
    "@akashic/akashic-cli": "^2.16.64",
    "@akashic/akashic-cli-commons": "^0.14.22",
    "@akashic/akashic-cli-export": "^1.8.39",
    "@akashic/akashic-engine-standalone": "^3.17.1",
    "@akashic/akashic-sandbox": "^0.28.12",
    "@rutan/deployment-zip": "^0.5.0",
    "@storybook/addon-actions": "^8.0.8",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/html": "^8.0.8",
    "@storybook/html-vite": "^8.0.8",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "cpx2": "^7.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-rulesdir": "^0.2.2",
    "glob": "^10.3.12",
    "husky": "^9.0.11",
    "jiti": "^1.21.0",
    "mkdirp": "^3.0.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "^8.0.8",
    "typescript": "^5.4.5",
    "vite": "^5.2.8"
  },
  "packageManager": "pnpm@8.15.6"
}
